<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/path4208"
            android:layout_marginBottom="49dp"
            android:layout_above="@+id/login_usuario"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/login_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="UsuÃ¡rio"
            android:inputType="textEmailAddress"
            android:layout_above="@+id/login_senha"
            android:layout_alignLeft="@+id/login_senha"
            android:layout_alignStart="@+id/login_senha"
            android:layout_alignRight="@+id/login_senha"
            android:layout_alignEnd="@+id/login_senha" />

    <EditText
        android:id="@+id/login_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_above="@+id/login_entrar"
        android:layout_alignRight="@+id/login_entrar"
        android:layout_alignEnd="@+id/login_entrar"
        android:layout_marginBottom="38dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/login_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="entrar"
        android:text="Entrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/login_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_senha"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@+id/login_entrar"
        android:layout_toStartOf="@+id/login_entrar"
        android:text="Cadastre-se" />

</RelativeLayout>